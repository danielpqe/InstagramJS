html
    head
        link(href='https://fonts.googleapis.com/css?family=Montserrat|Oleo+Script' rel='stylesheet' type='text/css')
        link(rel='stylesheet' type='text/css' href='app.css')

        link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
        link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
        link(rel="manifest", href="/site.webmanifest")
        meta(name="msapplication-TileColor", content="#da532c")
        meta(name="theme-color", content="#ffffff")

        meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
        meta(charset='utf-8')
    body
        section#main-container
            .container
                .row
                    .col.s10.push-s1
                        .row
                            .col.m5.hide-on-.small-only
                                img.iphone.hide-on-small-only(src='iphone.jpg', alt='')
                            .col.s12.m7
                                .row
                                    .signup-box
                                        h1.instagram Instagram
                                        form.signup-form(action='')
                                            h2 Regístrate para ver fotos de tus amigos
                                            .section
                                                a.btn.btn-fb.hide-on-small-only(href='') Iniciar sesión con Facebook
                                                a.btn.btn-fb.hide-on-med-and-up(href='') Iniciar sesión
                                            .divider
                                            .section
                                                input(type='email', name='email', placeholder='Correo electrónico')
                                                input(type='text', name='name', placeholder='Nombre completo')
                                                input(type='text', name='usename', placeholder='Nombre de usuario')
                                                input(type='password', name='password', placeholder='Contraseña')
                                                button.btn.waves-effect.waves-light.btn-signup(type='submit') Regístrate
                                .row
                                    .login-box
                                        | ¿Tienes una cuenta?
                                        a(href='/signin') Entrar
        footer.site-footer
            .container
                .row
                    .col.s12.l3.center-align
                        a.dropdown-button.btn(href='#', data-activates='dropdown1') Idioma
                        ul#dropdown1.dropdown-content
                            li
                                a(href='#!') Español
                            li
                                a(href='#!') Inglés
                    .col.s12.l3.push-l6.center-align
                        | © 2018 InstagramJS
        script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')
        script(type='application/javascript' src='app.js')
